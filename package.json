{
  "name": "b2b-saas-foundation",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\" --names \"WEB,API\" --prefix-colors \"cyan,magenta\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
